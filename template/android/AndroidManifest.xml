<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="{{Package}}"
      android:versionCode="{{VersionCode}}"
      android:versionName="{{Version}}">

	  <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	  {{ExtraPermissions}}
	  
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application android:label="{{ProjectName}}" android:icon="@drawable/ic_launcher">
        <activity android:name="geoff.androidnative.MainActivity" android:label="{{ProjectName}}" android:screenOrientation="{{Orientation}}" android:windowSoftInputMode="adjustPan" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
